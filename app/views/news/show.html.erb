<p id="notice"><%= notice %></p>

<h2><%= @news.title %></h2>

<p><em>Författare: <%= link_to @news.user.real_name, @news.user %></em></p>
<p><em>Datum: <%= fmt_time(@news.created_at) %></em></p>

<%= raw(markdown(@news.text)) %>

<p class="news-controls">
<% if can? :modify, News %>
  <%= link_to 'Ändra', edit_news_path(@news) %> |
  <%= link_to 'Förinta', @news, :confirm => 'Är du säker?', :method => :delete %> |
<% end %>
<%= link_to 'Tillbaka', news_index_path %>
</p>
