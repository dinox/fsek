<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id=error_explanation>
      <h2><%= pluralize(@page.errors.count, "error") %> 
          prohibited this page from being saved:</h2>
      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class=field>
    <%= f.label :title, 'Rubrik' %><br />
    <%= f.text_field :title %>
  </div>
  <div class=field>
    <%= f.label :name, 'Fasta URL-er' %>
    <% if @page.aliases.empty? %>
      <div class=name>
        <%= f.text_field nil, :id => nil, :name => 'page[names][]',
            :value => '' %>
      </div>
    <% else %>
      <% @page.names.each do |n| %>
        <div class=name>
          <%= f.text_field nil, :id => nil, :name => 'page[names][]', 
              :value => n %>
        </div>
      <% end %>
    <% end %>
    <a id=more-name-fields href='javascript:'>Fler...</a>
  </div>
  <div class=field>
    <%= f.label :content, 'Text' %><br />
    <%= f.text_area :content, :size => '80x40'%>
  </div>
  <div class=actions>
    <%= f.submit 'Ã„ndra sida' %>
  </div>
<% end %>
