<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.original_author_id %></td>
    <td><%= link_to 'Visa', page %>
    <%= link_to 'Ändra', edit_page_path(page) %>
    <%= link_to 'Förinta', page, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

