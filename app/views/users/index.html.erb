<h1>Användarlista</h1>
<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<table class="list">
<% @users.each do |user| %>
  <tr>
    <td><%= user.real_name %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.program.capitalize %></td>
    <td><%= '%02d' % user.year % 100 %></td>
    <td><%= link_to 'Visa', user %>
<% if can? :manage, user %>
    | <%= link_to 'Ändra', edit_user_path(user) %>
    | <%= link_to 'Förinta', user, confirm: 'Är du säker?', method: :delete %>
<% end %>
    </td>
  </tr>
<% end %>
</table>

<br>

<%= link_to 'Ny Användare', new_user_path %>
