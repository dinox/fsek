<h1>Användarlista</h1>
<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<table>
  <tr>
    <th>Användarnamn</th>
    <th>Email</th>
    <th>Namn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.real_name %></td>
    <td><%= link_to 'Visa', user %></td>
    <td><%= link_to 'Ändra', edit_user_path(user) %></td>
    <td><%= link_to 'Förinta', user, confirm: 'Är du säker?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Ny Användare', new_user_path %>
